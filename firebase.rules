rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'mariawebtech.contact@gmail.com';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Products collection
    match /products/{productId} {
      allow read: if true;  // Anyone can read products
      allow write: if isAdmin();  // Only admin can write
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.uid == resource.data.userId);
      allow write: if isAuthenticated();
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if true;  // Anyone can read categories
      allow write: if isAdmin();  // Only admin can write
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Allow admin to read all collections
    match /{collection}/{document=**} {
      allow read: if isAdmin();
    }
  }
} 